@model ShopLite.Models.Product

@{
	ViewData["Title"] = "Product Details";
}




<div class="row justify-content-center">
	<div class="col-md-8">
		<div class="card shadow-sm">
			<div class="row g-0">
				<div class="col-md-5">
					<img src="@Model.ImageUrl" class="img-fluid rounded-start h-100 object-fit-cover" alt="@Model.Name">
				</div>
				<div class="col-md-7 d-flex flex-column">
					<div class="card-body d-flex flex-column h-100">
						<h2 class="card-title mb-3">@Model.Name</h2>
						<p class="card-text text-muted mb-1">Category: <strong>@Model.Category?.Name</strong></p>
						<p class="card-text mb-4">@Model.Description</p>
						<h4 class="mt-auto mb-4">Price: <strong>@Model.Price.ToString("C")</strong></h4>
						<div class="d-flex justify-content-between">
							<a href="javascript:history.back()" class="btn btn-secondary">Back</a>
							<a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.ID" class="btn btn-primary">Add to Cart</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>