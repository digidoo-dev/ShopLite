@model IEnumerable<ShopLite.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Manage Categories</h3>
    <a asp-action="CreateCategory" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Category
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-light">
        <h5 class="mb-0">Category List</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 70%">Name</th>
                    <th class="text-end" style="width: 30%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.Name</td>
                        <td class="text-end">
                            <a asp-action="EditCategory" asp-route-id="@cat.ID" class="btn btn-sm btn-outline-secondary me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="DeleteCategory" asp-route-id="@cat.ID" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
