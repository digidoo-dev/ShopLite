@model ShopLite.Models.Product
@{
	ViewData["Title"] = "Add To Cart";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
            <div class="card-body">
                <h3 class="card-title">@Model.Name</h3>
                <p class="card-text mb-4">Price: <strong>@Model.Price.ToString("C")</strong></p>

                <form asp-action="AddToCartConfirmed" method="post">
                    <input name="productID" type="hidden" asp-for="ID" />

                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1">
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
                        <button type="submit" class="btn btn-primary">Add to cart</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>